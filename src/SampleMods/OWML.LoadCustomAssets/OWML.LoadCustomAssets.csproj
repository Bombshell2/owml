<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net40</TargetFramework>
	  <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="blaster-firing.wav" />
    <None Remove="duck.png" />
    <None Remove="spiral-mountain.mp3" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="blaster-firing.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="duck.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="spiral-mountain.mp3">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\OWML.ModHelper\OWML.ModHelper.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="cubebundle">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="cubebundle.manifest">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="default-config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="duck.obj">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="manifest.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="savefile.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="md &quot;$(SolutionDir)release\mods&quot;&#xD;&#xA;xcopy /i /y $(TargetPath) &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)manifest.json&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)default-config.json&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)blaster-firing.wav&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)cubebundle&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)cubebundle.manifest&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)duck.obj&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)duck.png&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)savefile.json&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;&#xD;&#xA;xcopy /i /y &quot;$(ProjectDir)spiral-mountain.mp3&quot; &quot;$(SolutionDir)release\mods\$(ProjectName)\&quot;" />
  </Target>

</Project>
